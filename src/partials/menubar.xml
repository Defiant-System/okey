<MenuBar>
	<Menu name="Okey 101">
		<Menu name="About Okey 101" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Okey 101" shell="win -c"/>
	</Menu>
	<Menu name="Game" for="game-board">
		<Menu name="51" click="set-game-engine" arg="51" check-group="game-engine"/>
		<Menu name="101" click="set-game-engine" arg="101" check-group="game-engine" is-checked="1"/>
		<Menu name="Classic Okey" click="set-game-engine" arg="classic" check-group="game-engine"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>